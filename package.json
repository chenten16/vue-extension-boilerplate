{
  "name": "vue-extension-boilerplate",
  "description": "This is a boilerplate for a Chrome Extension using Vite, Vue, and tailwindcss, designed for MV3",
  "private": true,
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "package": "npm run build && node build.js",
    "test": "vitest",
    "lint": "npm run eslint --ext .js,.vue,.jsx src/",
    "prettier": "prettier --write '**/*.{js,jsx,json,css,scss,md,vue}'"
  },
  "dependencies": {
    "vue": "^3.2.47",
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "2.0.0-beta.12",
    "@vitejs/plugin-vue": "^3.2.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "autoprefixer": "^10.4.13",
    "crx3": "^1.1.3",
    "eslint": "^8.34.0",
    "eslint-plugin-vue": "^9.9.0",
    "postcss": "^8.4.21",
    "prettier": "^2.8.4",
    "sass": "^1.58.1",
    "tailwindcss": "^3.2.7",
    "vite": "3.2.5",
    "vitest": "^0.28.5"
  },
  "engines": {
    "node": ">= 16.14.0",
    "npm": ">= 8.11.0",
    "yarn": ">= 1.22.0"
  }
}
